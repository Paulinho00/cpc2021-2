@model PawełGryglewiczLab4PracDom.Models.UserData
@{
    ViewData["Title"] = "Edycja danych";
}

<!--Pasek nawigacyjny-->
<navbar class="navbar navbar-expand-sm bg-dark navbar-dark">
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" href=@Url.Action("MainPage", "Home" )>Strona główna</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href=@Url.Action("TransfersView","Home")>Wyciągi</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href=@Url.Action("TransferForm","Home")>Przelew</a>
        </li>
    </ul>
</navbar>

<!--Formularz zmiany danych-->
@using (Html.BeginForm("EditUserData", "Home", FormMethod.Post))
{
<div class="form-horizontal">
    <h2>Edycja danych</h2>

    <!--Pole na adres email-->
    <div class="form-group">
        @Html.LabelFor(model => model.Email, "Adres email", htmlAttributes: new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", type="email", @placeholder = "Email" } })
        </div>
    </div>

    <!--Pole na imię-->
    <div class="form-group">
        @Html.LabelFor(model => model.FirstName, "Imię", htmlAttributes: new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Imię" } })
        </div>
    </div>

    <!--Pole na nazwisko-->
    <div class="form-group">
        @Html.LabelFor(model => model.Surname, "Imię", htmlAttributes: new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nazwisko" } })
        </div>
    </div>

    <!--Pole na PESEL-->
    <div class="form-group">
        @Html.LabelFor(model => model.IdNumber, "Nr PESEL", htmlAttributes: new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.EditorFor(model => model.IdNumber, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
        </div>
    </div>

    <!--Pole na nr konta-->
    <div class="form-group">
        @Html.LabelFor(model => model.AccountNumber, "Nr konta", htmlAttributes: new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.EditorFor(model => model.AccountNumber, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
        </div>
    </div>

    <!--Przycisk potwierdzenia-->
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" value="Zmień" class="btn btn-dark" />
        </div>
    </div>

    @{
        <!--Wyświetlenie komunikatu błędnych danych-->
        if (ViewBag.IsCorrect == false)
        {
            <div class="alert alert-danger">
                <strong>Błąd</strong> Błędne dane logowania
            </div>
        }
    }

</div>
}
